---
interface Props {
  tag: string;
  isClickable?: boolean;
}

const { tag, isClickable = false } = Astro.props;
---

{isClickable ? (
  <a href={`/tags/${tag}`} class="tag clickable">
    {tag}
  </a>
) : (
  <span class="tag">
    {tag}
  </span>
)}

<style>
  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    margin: 0.125rem;
    background: var(--accent-color);
    color: white;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .tag.clickable:hover {
    background: #2563eb;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .tag:not(.clickable) {
    background: rgba(59, 130, 246, 0.1);
    color: var(--accent-color);
    border: 1px solid rgba(59, 130, 246, 0.2);
  }
</style>
